<section class="container">
    <h1>Please select an account or create a new one</h1>
    <ul>
        <% @accounts.each do |account| %>
            <li><%= link_to account.name, account_path(account) %> <%= link_to "Edit", edit_account_path(account) %> </li>
        <% end %>
    </ul>

    <%= link_to "New Account", new_account_path, class: "btn btn-outline-dark" %>
</section>