<section class="container">
  <div class="row">
    <div class="col">
      <h1>Manage Account</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= form_with model: @account do |form| %>
        <div class="mb-2">
          <%= form.label :name, { class: "form-label" } %>
          <%= form.text_field :name, { class: "form-control" } %>
        </div>

        <div class="mb-2">
          <%= form.label :cross_account_role_arn, { class: "form-label" } %>
          <%= form.text_field :role_arn, { class: "form-control" } %>
        </div>

        <div class="db-flex">
          <div class="text-end">
            <a href="<%= accounts_path %>" class="btn btn-primary-outline" data-turbolinks-action="replace">Back</a>
            <%= form.submit 'Update', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>