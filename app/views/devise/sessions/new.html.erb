<h2>Sign in</h2>

<div class="card">
  <div class="card-body">
      <div class="form-group">
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'btn btn-block btn-outline-dark', "data-turbo": false do %>
        <div class='d-flex align-items-center justify-content-center'>
          <%= image_tag 'google-logo.svg', height: '18', class: 'mr-2' %>
          <span>Sign in with Google</span>
        </div>
        <% end %>
    </div>
  </div>
</div>
